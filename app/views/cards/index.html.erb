<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<table>
  <thead>
    <tr>
      <th>Card Type</th>
      <th>Name short</th>
      <th>Name</th>
      <th>Value</th>
      <th>Meaning up</th>
      <th>Meaning rev</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.card_type %></td>
        <td><%= card.name_short %></td>
        <td><%= card.name %></td>
        <td><%= card.value %></td>
        <td><%= card.meaning_up %></td>
        <td><%= card.meaning_rev %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Card', new_card_path %>
